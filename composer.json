{
    "name": "paulo-ricardo/pessl-instruments-task",
    "description": "This is my task for the SW position in Pessl Instruments",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "paulo-ricardo",
            "email": "paulo@actio.net.br"
        }
    ],
    "require": {
        "php": "^7.2.5",
        "fruitcake/laravel-cors": "^2.0",
        "illuminate/redis": "^7.27",
        "laravel/lumen-framework": "^7.0",
        "predis/predis": "^1.1",
        "sendgrid/sendgrid": "~7"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "files": [
            "app/Helpers/DataParser.php",
            "app/Services/EmailSender.php",
            "app/Services/LogService.php",
            "app/Services/PayloadService.php",
            "app/Services/AlertService.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
